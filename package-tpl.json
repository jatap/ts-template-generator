{
  "name": "XXX",
  "version": "1.0.0",
  "description": "XXX",
  "author": "Julio Antúnez Tarín <julio.antunez.tarin@gmail.com>",
  "license": "ISC",
  "main": "src/index.ts",
  "keywords": ["javascript", "js", "node", "ts", "typescript"],
  "scripts": {
    "***": "<------------------ build -------------------------------------->",
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "tsc",
    "commit": "git cz",
    "release": "standard-version --no-verify -t ''",
    "****": "<----------------- lint --------------------------------------->",
    "lint": "npm run lint:js",
    "lint:js": "tsc --noEmit && eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "lint:fix": "npm run lint:js -- --quiet --fix",
    "*****": "<---------------- tests -------------------------------------->",
    "test": "tsc --noEmit && jest --detectOpenHandles",
    "test:debug": "tsc --noEmit && node --inspect-brk node_modules/.bin/jest --runInBand --detectOpenHandles",
    "test:watch": "tsc --noEmit && jest --watch --updateSnapshot --detectOpenHandles || true",
    "test:coverage": "tsc --noEmit && jest --coverage --updateSnapshot --detectOpenHandles || true",
    "test:coverage:open": "open reports/coverage/index.html",
    "test:dev": "tsc --noEmit && jest --watch --coverage --updateSnapshot --detectOpenHandles || true",
    "******": "<--------------- types --------------------------------------->",
    "types": "dts-gen"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "commitizen": "^3.1.1",
    "cz-customizable": "^6.2.0",
    "debug": "^4.1.1",
    "dts-gen": "^0.5.7",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "jest-extended": "^0.11.1",
    "prettier": "^1.17.1",
    "standard-version": "^6.0.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XXX/XXX.git"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "cz-customizable.js"
    }
  },
  "engines": {
    "node": "10.15.3",
    "npm": "6.4.1"
  }
}
