{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug file source",
      "program": "${workspaceFolder}/src/${fileBasenameNoExtension}.ts",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "smartStep": true,
      "preLaunchTask": "build",
      "outFiles": [
        "${workspaceFolder}/.compiled/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug file compiled",
      "program": "${workspaceFolder}/.compiled/${fileBasenameNoExtension}.ts",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "smartStep": true,
      "preLaunchTask": "build",
      "outFiles": [
        "${workspaceFolder}/.compiled/*.ts"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug test",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "stopOnEntry": false,
      "sourceMaps": true,
      "args": [
        "${file}"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug tests: all",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "stopOnEntry": false,
      "sourceMaps": true,
      "args": [
        "src/**/*.test.ts"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Debug tests: attach",
      "port": 9229
    },
    {
      "name": "Debug tests: launch & attach",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ]
}

