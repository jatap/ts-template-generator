{
  "name": "ts-template-generator",
  "version": "0.1.0",
  "description": "TypeScript Template Generator",
  "author": "Julio Antúnez Tarín <julio.antunez.tarin@gmail.com>",
  "license": "ISC",
  "main": "src/index.js",
  "keywords": [
    "javascript",
    "js",
    "node",
    "ts",
    "typescript"
  ],
  "scripts": {
    "***": "<------------------ build -------------------------------------->",
    "build": "babel src -d .compiled",
    "watch": "babel src -d .compiled --watch",
    "start": "babel-node src/index.js",
    "commit": "git cz",
    "release": "standard-version --no-verify -t ''",
    "****": "<----------------- lint --------------------------------------->",
    "lint": "npm run lint:js",
    "lint:js": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "lint:fix": "npm run lint:js -- --fix",
    "*****": "<---------------- tests -------------------------------------->",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch --updateSnapshot || true",
    "test:coverage": "jest --coverage --updateSnapshot || true",
    "test:coverage:open": "open reports/coverage/index.html",
    "test:dev": "jest --watch --coverage --updateSnapshot || true",
    "******": "<--------------- types --------------------------------------->"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "@types/jest": "^24.0.13",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "commitizen": "^3.1.1",
    "cz-customizable": "^6.2.0",
    "debug": "^4.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "jest-extended": "^0.11.1",
    "prettier": "^1.17.1",
    "standard-version": "^6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jatap/ts-template-generator.git"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "cz-customizable.js"
    }
  },
  "engines": {
    "node": "10.15.3",
    "npm": "6.4.1"
  }
}
