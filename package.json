{
  "name": "ts-template-generator",
  "version": "0.1.0",
  "description": "TypeScript Template Generator",
  "author": "Julio Antúnez Tarín <julio.antunez.tarin@gmail.com>",
  "license": "ISC",
  "main": "src/index.ts",
  "keywords": [
    "javascript",
    "js",
    "node",
    "ts",
    "typescript"
  ],
  "scripts": {
    "***": "<------------------ build -------------------------------------->",
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "tsc",
    "commit": "git cz",
    "release": "standard-version --no-verify -t ''",
    "****": "<----------------- lint --------------------------------------->",
    "lint": "npm run lint:js",
    "lint:js": "tsc --noEmit && eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "lint:fix": "npm run lint:js -- --quiet --fix",
    "lint:check": "eslint --print-config .eslintrc | eslint-config-prettier-check",
    "*****": "<---------------- tests -------------------------------------->",
    "test": "tsc --noEmit && jest",
    "test:debug": "tsc --noEmit && node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:watch": "tsc --noEmit && jest --watch --updateSnapshot || true",
    "test:coverage": "tsc --noEmit && jest --coverage --updateSnapshot || true",
    "test:coverage:open": "open reports/coverage/index.html",
    "test:dev": "tsc --noEmit && jest --watch --coverage --updateSnapshot || true",
    "******": "<--------------- types --------------------------------------->",
    "types": "dts-gen"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.31",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "commitizen": "^4.0.3",
    "cz-customizable": "^6.2.0",
    "debug": "^4.1.1",
    "dts-gen": "^0.6.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.2.3",
    "jest": "^25.2.2",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jatap/ts-template-generator.git"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "cz-customizable.js"
    }
  },
  "engines": {
    "node": "10.15.3",
    "npm": "6.4.1"
  }
}
