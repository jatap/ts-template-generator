{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "outDir": ".compiled/",
    "lib": ["esnext", "es7", "es6", "es2015"],
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "./compiled", "**/*.test.ts"]
}
