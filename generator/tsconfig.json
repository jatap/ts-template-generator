{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["esnext", "es7", "es6", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".compiled/",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": ["@types/node", "@types/jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "./compiled", "**/*.test.ts"]
}
